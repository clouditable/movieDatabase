{{#if Movie}}
    <script>
    $('editForm').show();
    </script>
{{/if}}

<div class="row">
    <div class="col-12">
        <div class="card mt-2" name="form" id="form">
            <div class="card-body">
                <h5 class="card-title text-center">Add New Movie</h5>
                <form class="form-group" action="/" method="POST">
                    <span>Movie Name</span>
                    <input type="text" class="form-control" name="movieName" required>
            
                    <span>Movie Details</span>
                    <textarea type="text" class="form-control" name="movieDetails" required ></textarea>
            
                    <span>Movie Poster</span>
                    <input type="text" class="form-control" name="movieIMG" required>

                    <button type="submit" class="btn btn-block btn-dark mt-2">Save</button>
                </form>
            </div>
        </div>
    </div>       
</div>

<div class="row mt-3 mb-3">
    {{#each movie}}
        <div class="col-3 text-center">
            <div class="card">
                <img class="card-img-top" src="{{movieIMG}}" alt="Card image cap" height="340">
                    
                <div class="card-body">
                    <h5 class="card-title"style="height: 60px;">{{movieName}}</h5>
                    <p class="card-text" style="height: 90px; overflow:hidden;">{{movieDetails}}</p><span>...</span>
                    
                    <hr>

                    <form action="/{{_id}}"  method="POST" style="float: left">
                        <button class="btn btn-success btnEdit">Edit</button>
                    </form>

                    <form action="/delete/{{_id}}" method="POST" style="float: right">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    {{/each}}
</div>