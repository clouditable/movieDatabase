



<section>
  <div class="container py-3">
    <div class="card">
      <div class="row ">
        <div class="col-lg-4">
           <img class="card-img mt-2 mb-2 ml-2 mr-2" src="{{Poster}}" alt="Card image">
              
          </div>
          <div class="col-md-8 px-3">
            <div class="card-block px-3">
              <h4 class="card-title mt-5">{{Title}}</h4>
                <p>IMDb Rating : {{imdbRating}} </p>
                <p>Genre : {{Genre}} </p>
                <p>Released : {{Released}}</p>
              <p class="card-text">{{Plot}}</p>
            
     <span>Director : {{Director}}</span><a href="http://imdb.com/title/{{imdbID}}" class="btn btn-warning btn-block">Go To IMDB</a>
     <a class="btn btn-danger btn-block" href="https://www.youtube.com/results?search_query={{Title}}" target="new" >
            Go To YouTube
                     </a>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</section>